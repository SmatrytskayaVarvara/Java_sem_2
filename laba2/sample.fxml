<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <Button fx:id="ConnectButton" layoutX="50.0" layoutY="80.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="125.0" text="Соединиться" textFill="#14003a">
            <font>
                <Font name="Calibri" size="13.0" />
            </font>
        </Button>
        <Label layoutX="50.0" layoutY="5.0" prefHeight="26.0" prefWidth="112.0" text="IP адрес" textAlignment="CENTER" textFill="14003a">
            <font>
                <Font name="Calibri" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="IPAddressField" layoutX="50.0" layoutY="35.0" prefHeight="35.0" prefWidth="146.0" />
        <Label layoutX="220.0" layoutY="10.0" prefHeight="26.0" prefWidth="112.0" text="Порт" textFill="14003a">
            <font>
                <Font name="Calibri" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="PortField" layoutX="220.0" layoutY="35.0" prefHeight="35.0" prefWidth="75.0" />
        <Label layoutX="50.0" layoutY="125.0" prefHeight="30.0" prefWidth="200.0" text="Данные на сервер" textFill="14003a">
            <font>
                <Font name="Calibri" size="16.0" />
            </font>
        </Label>
        <Button fx:id="SendButton" layoutX="50" layoutY="375.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="125.0" text="Отправить" textFill="14003a">
            <font>
                <Font name="Calibri" size="12.0" />
            </font>
        </Button>
        <TextField fx:id="SendingDataField" layoutX="50.0" layoutY="160.0" prefHeight="61.0" prefWidth="359.0" />
        <Label layoutX="50.0" layoutY="220.0" prefHeight="30.0" prefWidth="160.0" text="Результат" textFill="14003a">
            <font>
                <Font name="Calibri" size="16.0" />
            </font>
        </Label>
        <TextArea fx:id="ResultArea" layoutX="50.0" layoutY="255.0" prefHeight="89.0" prefWidth="359.0" />
    </children>
</AnchorPane>
